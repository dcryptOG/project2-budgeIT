{
    "editor.formatOnSave": true,
    "editor.wordWrap": "on",
    "colorInfo.languages": [
        {
            "selector": "css",
            "colors": "css"
        },
        {
            "selector": "sass",
            "colors": "css"
        },
        {
            "selector": "scss",
            "colors": "css"
        },
        {
            "selector": "less",
            "colors": "css"
        }
    ],
    "window.zoomLevel": -2,
    "diffEditor.ignoreTrimWhitespace": false,
    "terminal.integrated.shell.windows": "C:\\Program Files\\Git\\bin\\bash.exe",
    "javascript.updateImportsOnFileMove.enabled": "always",
    "extensions.ignoreRecommendations": false,
    "eslint.autoFixOnSave": true,
    "javascript.preferences.quoteStyle": "single",
    "typescript.preferences.quoteStyle": "single",
    "beautify.language": {
        "js": {
            "type": [
                "javascript",
                "json"
            ],
            "filename": [
                ".jshintrc",
                ".jsbeautifyrc"
            ]
            // "ext": ["js", "json"]
            // ^^ to set extensions to be beautified using the javascript beautifier
        },
        "css": [
            "css",
            "scss"
        ],
        "html": [
            "htm",
            "html"
        ],
        // ^^ providing just an array sets the VS Code file type
        "todohighlight.isEnable": true,
        "todohighlight.isCaseSensitive": false,
        "todohighlight.keywords": [
            "DEBUG:",
            "REVIEW:",
            {
                "text": "NOTE:",
                "color": "#ff0000",
                "backgroundColor": "yellow",
                "overviewRulerColor": "grey"
            },
            {
                "text": "HACK:",
                "color": "#000",
                "isWholeLine": false,
            },
            {
                "text": "TODO:",
                "color": "red",
                "border": "1px solid red",
                "borderRadius": "2px", //NOTE: using borderRadius along with `border` or you will see nothing change
                "backgroundColor": "rgba(0,0,0,.2)",
                //other styling properties goes here ... 
            }
        ],
        "todohighlight.keywordsPattern": "TODO:|FIXME:|\\(([^)]+)\\)", //highlight `TODO:`,`FIXME:` or content between parentheses
        "todohighlight.defaultStyle": {
            "color": "red",
            "backgroundColor": "#ffab00",
            "overviewRulerColor": "#ffab00",
            "cursor": "pointer",
            "border": "1px solid #eee",
            "borderRadius": "2px",
            "isWholeLine": true,
            //other styling properties goes here ... 
        },
        "todohighlight.include": [
            "**/*.js",
            "**/*.jsx",
            "**/*.ts",
            "**/*.tsx",
            "**/*.html",
            "**/*.css",
            "**/*.scss"
        ],
        "todohighlight.exclude": [
            "**/node_modules/**",
            "**/bower_components/**",
            "**/dist/**",
            "**/build/**",
            "**/.vscode/**",
            "**/.github/**",
            "**/_output/**",
            "**/*.min.*",
            "**/*.map",
            "**/.next/**"
        ],
        "todohighlight.maxFilesForSearch": 5120,
        "todohighlight.toggleURI": true
    },
    "workbench.colorTheme": "Atom One Dark",
    "editor.fontFamily": "Fira Mono, Consolas, Roboto Mono, Ubuntu Mono, Source Code Pro Semibold,",
    "editor.fontLigatures": true,
    "editor.formatOnType": true,
    "editor.fontWeight": "600",
    "typescript.useCodeSnippetsOnMethodSuggest": true,
    // A list of vscode language names where the extension should be used.
    "css_peek.activeLanguages": [
        "html",
    ],
    // Controls the enablement.
    "css_peek.enable": true,
    // Files are ignored from the CSS lookup if they match any of these Regular Expressions (regex).
    "css_peek.exclude": [
        "node_modules",
        "bower_components"
    ],
    // A list of extensions that should be tried for finding peeked files.
    "css_peek.searchFileExtensions": [
        ".css",
    ],
    // The universal selector (`*`) is known to be slow.
    "css.lint.universalSelector": "ignore",
    "html.format.indentHandlebars": true,
    "debug.enableAllHovers": true,
}